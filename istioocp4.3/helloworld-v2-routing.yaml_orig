apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  name: helloworld-dr
spec:
  host: hello.helloworld.svc.cluster.local 
  #host: hello.default.svc.cluster.local
  subsets:
  - name: v1
    labels:
      version: v1
  - name: v2
    labels:
      version: v2
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: helloworld-vs
spec:
  hosts:
  - "*"
  gateways:
  - helloworld-gateway
  http:
  - match:
    - headers:
        end-user:
          exact: rohit 
    route:
    - destination:
        host: hello.helloworld.svc.cluster.local        
        #host: hello.default.svc.cluster.local
        subset: v2 # match v2 only
        port:
          number: 8080
  - route: # default route for hello.example.com
    - destination:
        host: hello.helloworld.svc.cluster.local
        #host: hello.default.svc.cluster.local
        subset: v1 # match v1 only
        port:
          number: 8080
